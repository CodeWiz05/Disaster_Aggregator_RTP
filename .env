# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///database.db

# API Keys (replace with actual keys)
USGS_API_KEY=your-usgs-api-key
GDACS_API_KEY=your-gdacs-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration (for alerts)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=alerts@disasteraggregator.org
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=alerts@disasteraggregator.org

# SMS Configuration (for alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Scraper Configuration
SCRAPE_INTERVAL=3600  # in seconds